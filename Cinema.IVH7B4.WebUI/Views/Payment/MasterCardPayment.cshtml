@using Cinema.IVH7B4.WebUI.Models
@model Cinema.IVH7B4.WebUI.Models.CinemaViewModel
@{
    ViewBag.Title = "Creditcard betaling";
}
<html>
<head>
    <!--Datepciker css-->
    <link href="~/Content/datepicker.css" rel="stylesheet" />
    <!--Datepicker js-->
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <!--initiate datepicker -->
    <script>
        $(function () {
            $('.datepicker').datepicker();
        });
    </script>
</head>
<body>
    <div class="text-center">
        <img class="img-responsive" style="margin: auto; display: block;" src="http://mijndebitcard.nl/wp-content/upload_folders/mijndebitcard.nl/2015/11/mastercard-logo.png">
        <p>@Resources.Global.OrderSummary_TotalPrice: @Model.GetCurrencyString(@Model.GetTotalPriceForAllTickets())</p>
        <p style="color: red">@ViewBag.Errorpayment</p>
    </div>

    <div class="text-center">
        <form method="post" action="@Url.Action("ShowTicketView", "Ticket", Model.PinValue = "6859")">
            <table style="margin: 0 auto;">
                <tr>
                    <td>

                        <p>@Resources.Global.CreditCard_CartNumber</p>
                    </td>
                    <td>
                        <input type="number" name="cardnumber" min="111" max="999"/>
                    </td>
                </tr>

                <tr>
                    <td>
                        <p>@Resources.Global.CreditCard_CartHolder</p>
                    </td>
                    <td>
                        <input type="text" name="name" minlength="2" maxlength="10"/>
                    </td>
                </tr>
            
                <tr>
                    <td>

                        <p>@Resources.Global.CreditCard_Cartexpiration</p>
                    </td>
                    <td>
                        <input class="datepicker" type="text" name="date" />
                    </td>
                </tr>
            
                <tr>
                    <td>

                        <p>@Resources.Global.CreditCard_CartSecurity</p>
                    </td>
                    <td>
                        <input type="number" name="securitynumber" min="1111111111111111" max="9999999999999999"/>
                    </td>
                </tr>

            </table>
            <br />
            <br />
            <button type="submit" class="btn btn-success">@Resources.Global.SummaryView_Checkout</button>
        </form>
    </div>    
</body>
</html>

