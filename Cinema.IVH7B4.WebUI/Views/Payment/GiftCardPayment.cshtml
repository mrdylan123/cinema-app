@using Cinema.IVH7B4.WebUI.Models
@model Cinema.IVH7B4.WebUI.Models.CinemaViewModel
@{
    ViewBag.Title = "Bioscoopbon betaling";
}
<div class="text-center">
    <h3>@Resources.Global.OrderSummary_TotalPrice: @Model.GetCurrencyString(@Model.GetTotalPriceForAllTickets())</h3>
    <p style="color: red">@ViewBag.Errorpayment</p>
</div>

<div class="container">
    <div class="text-center">
    <form method="post" action="@Url.Action("CheckValue", "Payment")">
        <table style="margin: 0 auto;">
            <tr>
                <td>
                    <p>Huidige waarde op bon:</p>
                </td>
                <td>
                    <input type="number" name="value" min="1" max="50" />
                </td>
            </tr>
        </table>
        <br />
        <br />

        <button type="submit" class="btn btn-success">Betalen</button>
    </form>

    <h3 style="color: green">@ViewBag.todo</h3>

    @if (ViewBag.todo != null)
    {
        <form method="post" action="@Url.Action("ShowTicketView", "Ticket")">
            
            <button class="btn btn-primary">Afronden</button>
        </form>
    }

    </div>


</div>

