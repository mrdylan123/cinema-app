@using Cinema.IVH7B4.Domain.Entities
@using Cinema.IVH7B4.WebUI.Models
@model Cinema.IVH7B4.WebUI.Models.CinemaViewModel
@{
    ViewBag.Title = "Review";
}
@Html.Partial("~/Views/Shared/_Menubar.cshtml")
    <div class="container-fluid" style="background-color: #ffffff; border-bottom: 1px solid #708090">
        <div class="row">
            <div class="col-md-12">
                <div class="text-center">
                    <h2>Reviews (@ViewBag.numberOfResults)</h2>
                    <h3>@ViewBag.filmName</h3>
                    <p style="color: #3fa024;"><b>@ViewBag.ReviewConfirmation</b></p>
                    <p style="color: red;"><b>@ViewBag.ReviewError</b></p>
                    <br />
                </div>
            </div>
        </div>
    </div>

<div class="text-center" style="background-color: #d1d1d1;">
    <br/>
    <h4>Voeg een review toe</h4>
    <br />
    <form method="post" action="@Url.Action("AddReview", "Criticize")">
        <table style="margin: 0 auto;">
            <tr>
                <td class="text-center">
                    <p>Beoordeling</p>
                </td>
            </tr>

            <tr>
                <td class="text-center">
                    <select name="rating">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5" selected="selected">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                    </select>
                </td>
            </tr>

            <tr>
                <td class="text-center">
                    <p>Beschrijving</p>
                </td>
            </tr>

            <tr>
                <td>
                    <textarea name="description" cols="60" rows="7" maxlength="500"></textarea>
                </td>

            </tr>

        </table>
        <br/>

        <button type="submit" class="btn btn-success">Voer in</button>
    </form>

    <hr style="border-top: 1px solid #708090"/>
</div>



<!------------------------------------- Show all reviews ------------------------------>
<div class="row">
    <div class="col-xs-2"></div>

    <div class="col-xs-8">
        <!-- Loop through the list of showings and show them -->
        @for (int i = 0; i < ViewBag.numberOfResults; i++)
            {
                Review r = ViewBag.reviews[i];

            <div class="well">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="text-center">
                            <h4>
                                <u>Beoordeling</u>:
                            </h4>
                            <h3><u><b>@r.Rating</b></u></h3>
                            
                            <p>@r.Description</p>
                        </div>
                        
                        
                    </div>


                </div>
            </div>
        }
    </div>

    <div class="col-xs-2"></div>

</div>


