@model Cinema.IVH7B4.WebUI.Models.CinemaViewModel
<html>
<head>
    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Own css and font -->
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
    <!-- Favicons -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <div class="container-fluid" style="background-color: #222222;">
            <div class="row">
                <div class="col-xs-12">
                    @if (Model != null && Model.loggedInUser != null)
                    {
                        <h1 class="text-center" style="color: #ffffff; font-family: 'Poppins', sans-serif; font-weight: 400; font-size: 3em;">Bioscoopapplicatie</h1>
                        <h2 class="text-center" style="color: #ffffff; font-family: 'Poppins', sans-serif; font-weight: 300; font-size: 2.2em;">U bent ingelogd als @Model.LoggedInUser</h2>
                    }
                    else
                    {
                        <h1 class="text-center" style="color: #ffffff; font-family: 'Poppins', sans-serif; font-weight: 400; font-size: 3em;">Bioscoopapplicatie</h1>
                    }
                </div>
            </div>
        </div>
    </header>  
    
    <div class="pageContentWrapper2">
        @RenderBody()
    </div>
</body>
</html>
