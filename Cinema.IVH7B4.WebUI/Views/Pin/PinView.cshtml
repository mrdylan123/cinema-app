@using Cinema.IVH7B4.WebUI.Models
@model Cinema.IVH7B4.WebUI.Models.CinemaViewModel
@{
    ViewBag.Title = "View";
}

<div>
    <h2 align="center">Betaal Informatie</h2>
</div>
<div class="col-md-offset-3 col-md-6 col-md-offset-3" style="padding: 20px; border: solid medium black;">
